{{#with placeFound}}
<form action="/places/edit/{{_id}}" method="post">
<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <!-- <img class="mx-auto h-12 w-auto" src="" alt="Image"> -->
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Edita el establecimiento</h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
        <div>
          <label class="block text-sm font-medium text-gray-700"> Nombre </label>
          <div class="mt-1">
            <input name="name" type="text" value="{{ name }}" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
          </div>
        </div>

          <div>
          <label class="block text-sm font-medium text-gray-700"> Estado </label>
          <div class="mt-1">
            <input name="state" type="text" value="{{ state }}" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700"> Ciudad </label>
          <div class="mt-1">
            <input name="location" type="text" value="{{ location }}" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700"> Descripción </label>
          <div class="mt-1">
            <textarea name="description" type="text" value="{{ description }}" cols="30" rows="4" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"></textarea>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700"> Imagen </label>
          <div class="mt-1">
            <input name="image" type="text" placeholder="url" value="{{ image }}" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
          </div>
        </div>
        <br>
        <div>
          <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-lime-500 hover:bg-lime-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-lime-400">Guardar cambios</button>
        </div>

        </div>
      </div>
    </div>
  </div>
</div>
</form>
{{/with}}
