<!-- This example requires Tailwind CSS v2.0+ -->
<header class="bg-lime-500">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Top">
    <div class="w-full py-6 flex items-center justify-between border-b border-lime-500 lg:border-none">
      <div class="flex items-center">

          <img class="h-10 w-auto" src="/images/diet.png" />

        <div class="hidden ml-10 space-x-8 lg:block">
          <a href="/profile" class="text-base font-medium text-white hover:text-lime-50"> Perfil </a>

          <a href="/places" class="text-base font-medium text-white hover:text-lime-50"> Establecimientos </a>
        </div>
      </div>
      <div class="ml-10 space-x-4">
        <a href="/auth/logout" class="inline-block bg-white py-2 px-4 border border-transparent rounded-md text-base font-medium text-lime-500 hover:bg-lime-50">Cerrar sesión</a>
      </div>
    </div>
    <div class="py-4 flex flex-wrap justify-center space-x-6 lg:hidden">
      <a href="#" class="text-base font-medium text-white hover:text-lime-50"> Perfil </a>

      <a href="/places" class="text-base font-medium text-white hover:text-lime-50"> Establecimientos </a>
    </div>
  </nav>
</header>


<div class="max-w-5xl mx-auto">
    <div class="max-w-xl ml-3">
        <p class="mt-3 text-10xl font-extrabold tracking-tight sm:text-5xl">Lista de tus establecimientos favoritos</p>
        <p class="mt-2 text-base text-gray-500">Aquí puedes registrar los establecimientos que más te gustan.</p>
        <br>
        <a href="/places/create" class="text-lime-500">
            <button>Agregar Establecimiento</button>
        </a>
    </div>
</div>
<div class="bg-white">
  <div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">

    <div class="grid grid-cols-1 gap-y-4 sm:grid-cols-2 sm:gap-x-6 sm:gap-y-10 lg:grid-cols-3 lg:gap-x-8">
      {{#each places}}
      <div class="group relative bg-white border border-gray-200 rounded-lg flex flex-col overflow-hidden">
        <div class="aspect-w-3 aspect-h-4 bg-gray-200 group-hover:opacity-75 sm:aspect-none sm:h-96">
          <img src="{{ image }}" class="w-full h-full object-center object-cover sm:w-full sm:h-full">
        </div>
        <div class="flex-1 p-4 space-y-2 flex flex-col">
          <h1 class="text-lg font-medium text-gray-900">
            <a href="/places/{{_id}}">
              <span aria-hidden="true" class="absolute inset-0"></span>
              {{ name }}
            </a>
          </h1>
          <p class="text-md text-gray-500">{{ description }}</p>
          <div class="flex-1 flex flex-col justify-end">
            <p class="text-md font-medium text-gray-900">{{ state }}</p>
            <p class="text-sm text-gray-500">{{ location }}</p>
          </div>
        </div>
      </div>
        {{/each}}
    </div>
  </div>
</div>


